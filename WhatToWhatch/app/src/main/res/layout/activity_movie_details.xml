<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MovieDetailsActivity">

    <ImageView
        android:id="@+id/imageMovie"
        android:layout_width="278dp"
        android:layout_height="326dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="66dp"
        app:layout_constraintBottom_toTopOf="@+id/textMovieName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textReleaseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Release Date : 0000"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textIMDbRating"
        app:layout_constraintEnd_toEndOf="@+id/textStars"
        app:layout_constraintStart_toStartOf="@+id/textStars"
        app:layout_constraintTop_toBottomOf="@+id/textStars" />

    <TextView
        android:id="@+id/textIMDbRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="IMDb Rating :"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textMovieDescription"
        app:layout_constraintEnd_toEndOf="@+id/textReleaseDate"
        app:layout_constraintStart_toStartOf="@+id/textReleaseDate"
        app:layout_constraintTop_toBottomOf="@+id/textReleaseDate" />

    <TextView
        android:id="@+id/textMovieName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:text="Movie Name :"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textMovieGenre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageMovie" />

    <TextView
        android:id="@+id/textMovieDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Movie Description :"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textIMDbRating"
        app:layout_constraintStart_toStartOf="@+id/textIMDbRating"
        app:layout_constraintTop_toBottomOf="@+id/textIMDbRating" />

    <TextView
        android:id="@+id/textMovieGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Movie Genre :"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textDirector"
        app:layout_constraintEnd_toEndOf="@+id/textMovieName"
        app:layout_constraintStart_toStartOf="@+id/textMovieName"
        app:layout_constraintTop_toBottomOf="@+id/textMovieName" />

    <TextView
        android:id="@+id/textDirector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Director :"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textStars"
        app:layout_constraintEnd_toEndOf="@+id/textMovieGenre"
        app:layout_constraintStart_toStartOf="@+id/textMovieGenre"
        app:layout_constraintTop_toBottomOf="@+id/textMovieGenre" />

    <TextView
        android:id="@+id/textStars"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Stars :"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textReleaseDate"
        app:layout_constraintEnd_toEndOf="@+id/textDirector"
        app:layout_constraintStart_toStartOf="@+id/textDirector"
        app:layout_constraintTop_toBottomOf="@+id/textDirector" />

</androidx.constraintlayout.widget.ConstraintLayout>